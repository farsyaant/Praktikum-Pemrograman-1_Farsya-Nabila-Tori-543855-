# Variables
CXX = g++
CXXFLAGS = -Wall
TARGET = Soal 1
SRC = Soal 1.cpp

# Default target: compile the program
all: Soal 1

# Compile the Soal 1.cpp
Soal 1: Soal 1.cpp
	g++ -Wall -o Soal 1 Soal 1.cpp

# Run the program in test mode (using test.txt)
test: Soal 1
	./Soal 1 test

# Clean up the compiled files
clean:
	rm -f Soal 1

# Phony targets to avoid conflicts
.PHONY: all clean test
